<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FridaHub.App.ViewModels"
             xmlns:models="clr-namespace:FridaHub.Core.Models;assembly=FridaHub.Core"
             x:Class="FridaHub.App.Views.ScriptsView"
             x:DataType="vm:ScriptsViewModel">
    <StackPanel Margin="8">
        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
            <Button Content="Adicionar Script Local" Click="OnAddLocalScript"/>
            <TextBox x:Name="SearchBox"
                     Watermark="Buscar scripts..."
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding Scripts}">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:ScriptRef">
                    <Border Margin="0,0,0,8" Classes="card">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" Classes="h3"/>
                            <TextBlock Text="{Binding Author}" FontStyle="Italic" Classes="body"/>
                            <TextBlock Text="{Binding Source}" Classes="caption" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
