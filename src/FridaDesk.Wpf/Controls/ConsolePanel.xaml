<UserControl x:Class="FridaDesk.Wpf.Controls.ConsolePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="{StaticResource SidebarBackgroundBrush}" Padding="5">
        <Grid RowDefinitions="Auto,*" Margin="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5">
                <Button Content="Copiar" Command="{Binding CopyConsoleCommand}"/>
                <Button Content="Limpar" Command="{Binding ClearConsoleCommand}"/>
                <Button Content="Salvar" Command="{Binding SaveConsoleCommand}"/>
            </StackPanel>
            <TextBox x:Name="ConsoleBox" Grid.Row="1" Text="{Binding ConsoleText}" FontFamily="Consolas" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </Grid>
    </Border>
</UserControl>
