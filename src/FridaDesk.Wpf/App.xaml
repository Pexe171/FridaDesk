<Application x:Class="FridaDesk.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryBackgroundColor">#FF121212</Color>
            <Color x:Key="PrimaryForegroundColor">#FFFFFFFF</Color>
            <Color x:Key="SidebarBackgroundColor">#FF1E1E1E</Color>

            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}" />
            <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource PrimaryForegroundColor}" />
            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}" />

            <Style TargetType="Window">
                <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="Margin" Value="5" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
