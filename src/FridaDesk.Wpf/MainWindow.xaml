<Window x:Class="FridaDesk.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:FridaDesk.Wpf.Controls"
        Title="FridaDesk" Height="450" Width="800" MinWidth="600" MinHeight="400">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="F" Modifiers="Control" Command="{Binding FocusSearchCommand}" CommandParameter="{Binding ElementName=SearchBox}" />
        <KeyBinding Key="L" Modifiers="Control" Command="{Binding ClearConsoleCommand}" />
    </Window.InputBindings>
    <Grid RowDefinitions="Auto,*">
        <Border Grid.Row="0" Background="{StaticResource AccentBrush}" Padding="5" Visibility="{Binding ShowAuthorizedBanner, Converter={StaticResource BoolToVis}}">
            <DockPanel>
                <TextBlock Text="Uso autorizado somente." Margin="5"/>
                <Button Content="Fechar" Command="{Binding DismissBannerCommand}" DockPanel.Dock="Right" Margin="5"/>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Image Source="assets/logo.svg" Width="28" Height="28" Margin="10" />
                    <TextBox x:Name="SearchBox" Margin="10,0" />
                    <Button Content="Devices" Command="{Binding NavigateDevicesCommand}" />
                    <Button Content="Scripts" IsEnabled="False" />
                    <Button Content="Execuções" IsEnabled="False" />
                    <Button Content="Configurações" IsEnabled="False" />
                    <Button Content="Sobre" Command="{Binding OpenAboutCommand}" />
                </StackPanel>

                <controls:ConsolePanel Grid.Row="1"/>
            </Grid>

            <ContentControl Grid.Column="1" Content="{Binding CurrentView}" />
        </Grid>
    </Grid>
</Window>
